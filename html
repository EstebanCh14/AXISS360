  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({ duration: 800, once: true });

    // Función callback para manejar la respuesta de Google
    function handleCredentialResponse(response) {
      console.log("Token de Google:", response.credential);
      // Aquí podrías enviar el token al servidor para validarlo o crear una sesión
    }

    // Inicializa Google Identity Services
    google.accounts.id.initialize({
      client_id: "676544046017-sd497p0gqgr75v2pa53al6qt3posrohi.apps.googleusercontent.com",  // Tu Client ID
      callback: handleCredentialResponse
    });

    // Renderiza el botón de Google en el contenedor
    google.accounts.id.renderButton(
      document.getElementById("googleSignInButton"),
      { theme: "outline", size: "large" }
    );

    // Opcional: Mostrar automáticamente el prompt de autenticación
    // google.accounts.id.prompt();
  </script>
