  <!-- Scripts -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({ duration: 800, once: true });
    const btn = document.getElementById('menu-btn'), menu = document.getElementById('menu');
    btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    const themeBtn = document.getElementById('theme-btn'), sun = document.getElementById('sun'), moon = document.getElementById('moon');
    themeBtn.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
      sun.classList.toggle('hidden'); moon.classList.toggle('hidden');
    });
