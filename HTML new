  <!-- Facebook Init & Callbacks -->
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : 'YOUR_APP_ID',
        cookie     : true,
        xfbml      : true,
        version    : 'v11.0'
      });
      FB.AppEvents.logPageView();
    };
    function checkFacebookLoginState() {
      FB.getLoginStatus(function(response) {
        if (response.status === 'connected') {
          const accessToken = response.authResponse.accessToken;
          FB.api('/me', { fields: 'id,name,email,picture' }, function(profile) {
            fetch('/auth/facebook', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ accessToken })
            }).then(res => res.json()).then(data => {
              if (data.success) window.location.href = '/dashboard';
              else alert('Error al iniciar sesión con Facebook');
            });
          });
        } else console.log('Usuario no conectado a Facebook');
      });
    }
  </script>

  <!-- Scripts: AOS, Theme, Google SignIn -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    // AOS
    AOS.init({ duration: 800, once: true });
    // Theme toggle with persistence
    const themeToggle = document.getElementById('theme-toggle');
    const themeIcon = document.getElementById('theme-icon');
    const setIcon = (mode) => {
      themeIcon.innerHTML = mode === 'dark'
        ? '<path d="M10 2a8 8 0 017.446 5.032A9 9 0 1110 2z" />'
        : '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16a8 8 0 000 16z" clip-rule="evenodd" />';
    };
    const applyTheme = (isDark) => {
      document.documentElement.classList.toggle('dark', isDark);
      setIcon(isDark ? 'dark' : 'light');
      localStorage.theme = isDark ? 'dark' : 'light';
    };
    // Initialize theme
    const stored = localStorage.theme;
    if (stored === 'dark' || (!stored && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      applyTheme(true);
    } else {
      applyTheme(false);
    }
    // Toggle
    themeToggle.addEventListener('click', () => applyTheme(!document.documentElement.classList.contains('dark')));
    // Google Sign-In
    function handleCredentialResponse(response) {
      console.log('Token de Google:', response.credential);
    }
    google.accounts.id.initialize({ client_id: '676544046017-sd497p0gqgr75v2pa53al6qt3posrohi.apps.googleusercontent.com', callback: handleCredentialResponse });
    google.accounts.id.renderButton(document.getElementById('googleSignInButton'), { theme: 'outline', size: 'large' });
  </script>
